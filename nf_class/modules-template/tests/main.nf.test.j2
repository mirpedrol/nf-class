nextflow_process {

    name "Test Process {{ component_name_underscore|upper }}"
    script "../main.nf"
    process "{{ component_name_underscore|upper }}"

    tag "modules"
    tag "modules_{{ org_alphabet }}"
    {%- if subtool %}
    tag "{{ component }}"
    {%- endif %}
    tag "{{ component_name }}"

    // TODO nf-class: Change the test name.
    test("sarscov2 - fasta") {

        when {
            process {
                // TODO nf-class: Update the input to match the test data.
                """
                input[0] = [ [ id:'test' ], // meta map
                    file(params.test_data['sarscov2']['illumina']['contigs_fasta'], checkIfExists: true)
                ]
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(process.out).match() }
            )
        }

    }

